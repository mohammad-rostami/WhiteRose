<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context=".Activity_Main$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/XL_pad"
            android:paddingRight="@dimen/XL_pad"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/fragment_insurance_cv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/s_pad">


                <LinearLayout
                    android:id="@+id/fragment_insurance_ll_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/big_item_pad"
                    android:paddingTop="@dimen/big_item_pad">


                    <EditText
                        android:id="@+id/fragment_insurance_et_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:gravity="right|center_vertical"
                        android:hint="کشور مقصد"
                        android:padding="5dp"
                        android:textColor="@color/second_color"
                        android:textColorHint="@color/second_color"
                        android:textSize="@dimen/text_size_big" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:gravity="right|center_vertical"
                        android:hint="مقصد سفر را انتخاب کنید"
                        android:paddingRight="5dp"
                        android:textColorHint="@color/colorfilter"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_disabled" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_insurance_cv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/s_pad"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/fragment_insurance_ll_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/L_pad"
                    android:paddingTop="@dimen/L_pad">

                    <EditText
                        android:id="@+id/fragment_insurance_et_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:gravity="right|center_vertical"
                        android:hint="تاریخ شروع سفر"
                        android:padding="10dp"
                        android:textColor="@color/color_tint"
                        android:textColorHint="@color/color_tint"
                        android:textSize="@dimen/text_size_small" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_disabled" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/s_pad"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/s_pad"
                    android:layout_weight="0.8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/fragment_insurance_til_day_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingBottom="4dp"
                                android:paddingTop="3dp">

                                <EditText
                                    android:id="@+id/fragment_insurance_et_day_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:focusable="false"
                                    android:gravity="right"
                                    android:hint="تعداد شب"
                                    android:padding="10dp"
                                    android:text="1"
                                    android:textColor="@color/color_tint"
                                    android:textColorHint="@color/color_tint"
                                    android:textSize="@dimen/text_size_medium" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_disabled" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s_pad"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/fragment_insurance_til_passenger_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="4dp"
                            android:paddingTop="3dp">

                            <EditText
                                android:id="@+id/fragment_insurance_et_passenger_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:focusable="false"
                                android:gravity="right"
                                android:hint="تعداد نفرات"
                                android:padding="10dp"
                                android:text="1"
                                android:textColor="@color/color_tint"
                                android:textColorHint="@color/color_tint"
                                android:textSize="@dimen/text_size_medium" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_disabled" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_insurance_ll_insurance_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/L_pad"
                android:visibility="visible">

                <android.support.v7.widget.CardView
                    android:id="@+id/fragment_insurance_cv_saman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/fragment_insurance_ll_saman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/s_pad"
                        android:background="@color/color_white"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/fragment_insurance_img_saman"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:adjustViewBounds="true"
                            android:tint="#99ffffff" />

                        <TextView
                            android:id="@+id/fragment_insurance_txt_saman"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/s_pad"
                            android:text="بیمه سامان"
                            android:textColor="@color/color_tint"
                            android:textColorHint="@color/color_tint"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_saman"
                            android:tint="@color/color_tint"
                            android:visibility="visible" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fragment_insurance_cv_pasargad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/fragment_insurance_ll_pasargad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/s_pad"
                        android:background="@color/color_white"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/fragment_insurance_img_pasargad"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:adjustViewBounds="true" />

                        <TextView
                            android:id="@+id/fragment_insurance_txt_pasargad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/s_pad"
                            android:text="بیمه پاسارگاد"
                            android:textColor="@color/color_tint"
                            android:textColorHint="@color/color_tint"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_pasargad"
                            android:tint="@color/color_tint"
                            android:visibility="visible" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/L_pad"
                    android:background="@color/color_disabled" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



        <LinearLayout
            android:id="@+id/activity_reserve_cv_flight_search"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/second_color"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/activity_reserve_txt_flight_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:gravity="center"
                android:text="جستجو"
                android:textColor="#ffffff"
                android:textSize="10dp" />

        </LinearLayout>

</RelativeLayout>

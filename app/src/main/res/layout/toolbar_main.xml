<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_main_tb_main"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#fbfbfb"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_main_ll_bottom_navigation_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/activity_main_ll_navigation"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:paddingBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_main_tb_main_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/toolbar_main_ll_content_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">

                <ImageView
                    android:id="@+id/toolbar_main_btn_weather"
                    android:layout_width="@dimen/S_icon"
                    android:layout_height="@dimen/S_icon"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:padding="@dimen/s_pad"
                    android:src="@drawable/ic_world_24dp"
                    android:text="btn" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/toolbar_main_ll_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="right|center_vertical">


                <TextView
                    android:id="@+id/toolbar_main_txt_header"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="لیست هتل ها"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/XXL_text"
                    android:padding="@dimen/L_pad"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toolbar_main_tb_search"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/toolbar_main_layout_search2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/toolbar_main_btn_search2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="@dimen/L_pad"
                    android:src="@drawable/ic_world_24dp"
                    android:text="btn"
                    android:tint="#999999" />

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/toolbar_main_txt_header2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="جستجوی شهر..."
                    android:inputType="textNoSuggestions"
                    android:nextFocusLeft="@id/toolbar_main_txt_header"
                    android:nextFocusUp="@id/toolbar_main_txt_header"
                    android:singleLine="true"
                    android:textColor="#777777"
                    android:textColorHint="#777777"
                    android:textSize="@dimen/XXL_text"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/toolbar_main_btn_navigation2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="@dimen/L_pad"
                    android:rotation="180"
                    android:src="@drawable/ic_close_black_24dp"
                    android:text="btn"
                    android:tint="#999999" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_main_layout_search1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/toolbar_main_btn_search1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="@dimen/L_pad"
                    android:src="@drawable/ic_world_24dp"
                    android:text="btn"
                    android:tint="#999999" />

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/toolbar_main_txt_header1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="جستجوی شهر..."
                    android:inputType="textNoSuggestions"
                    android:nextFocusLeft="@id/toolbar_main_txt_header"
                    android:nextFocusUp="@id/toolbar_main_txt_header"
                    android:singleLine="true"
                    android:textColor="#777777"
                    android:textColorHint="#777777"
                    android:textSize="@dimen/XXL_text"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/toolbar_main_btn_navigation1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:padding="@dimen/L_pad"
                    android:rotation="180"
                    android:src="@drawable/ic_close_black_24dp"
                    android:text="btn"
                    android:tint="#999999" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_package_ll_table_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_reserve_img_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/antalia" />

        <LinearLayout
            android:id="@+id/item_package_ll_highlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/item_package_txt_highlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:text="تور آنتالیا"
                android:textColor="#494949"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_package_txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:text="*پروازها و هتل ها چارتر و گارانتی بوده و در صورت کنسلی هیچ مبلغی استرداد نمیگردد"
                android:textColor="#9e9e9e"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_package_txt_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:padding="8dp"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_package_txt_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:padding="8dp"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_package_txt_idn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:padding="8dp"
                android:textColor="#ffffff"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left">

                <ImageView
                    android:id="@+id/item_package_img_expand"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:src="@drawable/ic_expand"
                    android:tint="@color/color_tint" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_package_txt_learn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="اطلاعات بیشتر"
                android:textColor="#53c8d9" />

            <TextView
                android:id="@+id/item_package_txt_share"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:text="اشتراک" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_packages_ll_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/item_package_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:padding="16dp"
                android:text="*گشت شهری + مراسم سماء مبلغ 200،000 تومان اضافه میگردد.
(شامل :موزه و مقبره مولانا +مسجد شمس تبریزی +طاووس بابا به همراه ناهار و مرکز خرید kent plaza)

*پروازها و هتل ها چارتر و گارانتی بوده و در صورت کنسلی هیچ مبلغی استرداد نمیگردد.
*مسئولیت کنترل پاسپورت بابت هر گونه ممنوعیت خروج از کشور به عهده مسافر و اعتبار پاسپورت با آژانس ثبت نام کننده می باشد." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:padding="16dp"
                android:text="this textview is just for testing the expandable view" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>